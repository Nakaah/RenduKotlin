<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KPIActivity">

    <EditText
            android:id="@+id/month"
            android:hint="month"
            android:layout_height="49dp"
            android:layout_width="173dp"
            android:inputType="text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.041" app:layout_constraintVertical_bias="0.017"/>

    <EditText
            android:id="@+id/year"
            android:hint="year"
            android:layout_height="47dp"
            android:layout_width="166dp"
            android:inputType="text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/month" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.062" app:layout_constraintVertical_bias="0.01"/>

    <EditText
            android:id="@+id/appareil"
            android:hint="appareil"
            android:layout_height="47dp"
            android:layout_width="166dp"
            android:inputType="text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/year" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.062" app:layout_constraintVertical_bias="0.01"/>

    <Button
            android:id="@+id/button_CA"
            android:text="CA"
            android:layout_width="61dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:onClick="caClick"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/month"
            android:layout_marginStart="60dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:id="@+id/button_ROI"
            android:text="ROI"
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:onClick="roiClick"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/month"
            android:layout_marginStart="60dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:id="@+id/button_pm"
            android:text="PM"
            android:layout_width="61dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:onClick="pmClick"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/month"
            android:layout_marginStart="60dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.138"/>

    <Button
            android:id="@+id/button_cc"
            android:text="CC"
            android:layout_width="61dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:onClick="ccClick"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/month"
            android:layout_marginStart="60dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.27" app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:id="@+id/button_tc"
            android:text="TC"
            android:layout_width="63dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:onClick="tcClick"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/month"
            android:layout_marginStart="60dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.138"/>

    <Button
            android:id="@+id/button_run"
            android:text="RUN"
            android:layout_width="61dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:onClick="runClick"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/month"
            android:layout_marginStart="60dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.272"/>

    <TextView
            android:text="result"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_width="323dp"
            android:layout_height="298dp"
            android:id="@+id/result" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.96" app:layout_constraintHorizontal_bias="0.504"/>

</android.support.constraint.ConstraintLayout>